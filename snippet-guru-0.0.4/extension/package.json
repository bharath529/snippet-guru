{
  "name": "snippet-guru",
  "displayName": "Snippet Guru",
  "description": "A VS Code extension for managing and creating code snippets efficiently",
  "version": "0.0.4",
  "publisher": "BharathBheemireddy",
  "engines": {
    "vscode": "^1.90.0"
  },
  "license": "BSD-3-Clause",
  "categories": [
    "Other"
  ],
  "icon": "images/logo.webp",
  "repository": {
    "type": "git",
    "url": "https://github.com/bharath529/snippet-guru.git"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets.json"
      },
      {
        "language": "typescript",
        "path": "./snippets.json"
      },
      {
        "language": "javascriptreact",
        "path": "./snippets.json"
      },
      {
        "language": "typescriptreact",
        "path": "./snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "echo Skipping prepublish",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
